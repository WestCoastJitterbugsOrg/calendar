{
	"$schema": "https://turbo.build/schema.json",
	"pipeline": {
		"build": {
			"dependsOn": ["^build"],
			"outputs": ["build/**"]
		},
		"test": {
			"dependsOn": ["build"],
			"inputs": ["src/**/*.tsx", "src/**/*.ts", "test/**/*.ts", "test/**/*.tsx"]
		},
		"lint": {},
		"setup-env": {
			"cache": false
		},
		"@cwfc/wordpress#watch": {
			"outputMode": "none"
		},
		"watch": {
			"cache": false,
			"persistent": true,
			"dependsOn": ["@cwfc/wordpress#setup-env"]
		}
	}
}
